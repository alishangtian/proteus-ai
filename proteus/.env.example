# Proteus AI 环境变量配置示例

# 日志配置
log_file_path=logs/workflow_engine.log
LOG_LEVEL=INFO

# 并发控制
MAX_CONCURRENT_REQUESTS=50

# 重试配置
ITERATION_RETRY_DELAY=30

# 超时配置
DEFAULT_LLM_TIMEOUT=120
DEFAULT_TOOL_TIMEOUT=60

# 缓存配置
CONFIG_CACHE_SIZE=32
TOOL_CACHE_SIZE=100
CACHE_TTL=3600

# Redis配置
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# 模型配置
DEFAULT_MODEL=deepseek-chat
REASONER_MODEL=deepseek-reasoner

# 安全配置
MAX_INPUT_LENGTH=10000
MAX_ITERATIONS=50

# 文件上传限制
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=txt,md,pdf,docx,xlsx,png,jpg,jpeg

# 系统监控
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true